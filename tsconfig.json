{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@orbitblu/common/*": ["packages/common/src/*"],
      "@orbitblu/admin/*": ["packages/admin/src/*"],
      "@orbitblu/customer/*": ["packages/customer/src/*"]
    },
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "./packages/common/src/types"]
  },
  "exclude": ["node_modules", "**/dist", "**/.next", "**/coverage"],
  "include": ["**/*.ts", "**/*.tsx"]
} 